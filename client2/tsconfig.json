{
  "compilerOptions": {
    "lib": ["esnext"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "types": ["src/**", "lua-types/jit", "love-typescript-definitions"]
  },
  "include": ["./src/**/*.ts"],
  "tstl": {
    "luaTarget": "JIT"
  }
}
